# Example Oracle configuration
# Copy this file to .env and modify the values to use Oracle Autonomous Database

# Database Configuration
DB_TYPE=oracle

# Oracle Database Configuration
ORACLE_USER=ADMIN
ORACLE_PASSWORD=YourSecurePassword123
ORACLE_CONNECTION_STRING=myfinancedb_high
ORACLE_WALLET_LOCATION=/path/to/your/wallet
ORACLE_WALLET_PASSWORD=YourWalletPassword

# Server Configuration
PORT=3001
NODE_ENV=production

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
BCRYPT_ROUNDS=12

# CORS
ALLOWED_ORIGINS=http://localhost:80,http://localhost:5173,http://localhost:3000